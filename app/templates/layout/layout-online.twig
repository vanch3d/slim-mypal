<body>

<!-- Fixed navbar -->
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"><i class="fa fa-users" aria-hidden="true"></i> myPAL (Slim)</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="{{ route == 'homepage' ? 'active' }}"><a href="{{ path_for("homepage") }}">Home</a></li>
                <li class="{{ route == 'oscepage' ? 'active' }}"><a href="{{ path_for("oscepage") }}">OSCE Explorer</a></li>
                <li class="{{ route == 'adminpage' ? 'active' }}"><a href="{{ path_for("adminpage") }}">Admin</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tools <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="//local.learninglocker.org" target="tLL"> <img width="24" src="//learninglocker.net/wp-content/uploads/cropped-Learning-Locker-icon-32x32.png" /> Learning Locker</a></li>

                        <li role="separator" class="divider"></li>
